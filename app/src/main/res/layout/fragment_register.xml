<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/et_register"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="@color/title"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginHorizontal="32dp"
            android:padding="16dp"
            android:hint="Username"
            android:inputType="text"
            android:drawableLeft="@drawable/baseline_person"
            android:drawablePadding="8dp"
            android:drawableTint="@color/font"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/input"
            android:elevation="8dp"
            android:fontFamily="@font/poppins_regular" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:padding="16dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/baseline_email"
            android:drawablePadding="8dp"
            android:drawableTint="@color/font"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/input"
            android:elevation="8dp"
            android:fontFamily="@font/poppins_regular" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:padding="16dp"
            android:hint="Phone"
            android:inputType="text"
            android:drawableLeft="@drawable/baseline_phone"
            android:drawablePadding="8dp"
            android:drawableTint="@color/font"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/input"
            android:elevation="8dp"
            android:fontFamily="@font/poppins_regular" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:padding="16dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/baseline_lock"
            android:drawableRight="@drawable/baseline_eye"
            android:drawablePadding="8dp"
            android:drawableTint="@color/font"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/input"
            android:elevation="8dp"
            android:fontFamily="@font/poppins_regular" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:text="@string/terms_condition"
            android:textColorLink="@color/button"
            android:textSize="10sp"
            android:textColor="@color/font"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="32dp"
            android:text="@string/register"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/button"
            android:elevation="8dp"
            android:fontFamily="@font/poppins_bold" />
    </LinearLayout>




</LinearLayout>